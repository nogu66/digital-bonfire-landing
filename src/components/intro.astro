---
import ContentSection from "~/components/content-section.astro";
import PixelIcon from "~/components/pixel-icon.astro";
import type { Lang } from "~/i18n/translations";
import { translations } from "~/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang];
---

<ContentSection title={t.intro.title} id="intro">
  <Fragment slot="lead">
    <span set:html={t.intro.lead} />
  </Fragment>
  <div class="grid max-w-4xl grid-cols-1 gap-6 sm:grid-cols-3">
    <div class="flex flex-col items-center gap-3 rounded-2xl border border-default bg-offset p-6">
      <PixelIcon name="fire-oak" size={48} />
      <p class="font-bold text-lg">{t.intro.woodTypes.count}</p>
      <p class="text-center text-offset text-sm">{t.intro.woodTypes.desc}</p>
    </div>
    <div class="flex flex-col items-center gap-3 rounded-2xl border border-default bg-offset p-6">
      <PixelIcon name="cat" size={48} />
      <p class="font-bold text-lg">{t.intro.companions.count}</p>
      <p class="text-center text-offset text-sm">{t.intro.companions.desc}</p>
    </div>
    <div class="flex flex-col items-center gap-3 rounded-2xl border border-default bg-offset p-6">
      <PixelIcon name="fire-frost" size={48} />
      <p class="font-bold text-lg">{t.intro.weather.count}</p>
      <p class="text-center text-offset text-sm">{t.intro.weather.desc}</p>
    </div>
  </div>
</ContentSection>
