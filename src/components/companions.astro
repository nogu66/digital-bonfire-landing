---
import ContentSection from "~/components/content-section.astro";
import PixelIcon from "~/components/pixel-icon.astro";
import type { Lang } from "~/i18n/translations";
import { translations } from "~/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang];

const companionIconNames = ["solo", "cat", "wizard", "hooded", "owl"];
---

<ContentSection title={t.companions.title} id="companions">
  <Fragment slot="lead">
    <span set:html={t.companions.lead} />
  </Fragment>
  <div class="grid max-w-4xl grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-5">
    {
      t.companions.items.map((companion, index) => (
        <div class="group relative flex flex-col items-center gap-3 rounded-2xl border border-default bg-offset p-5 transition-all hover:border-primary/50 hover:shadow-lg hover:shadow-orange-500/10">
          {companion.free && (
            <span class="absolute -right-2 -top-2 rounded-full bg-green-500 px-2 py-0.5 text-white text-xs font-bold">
              {t.woodTypes.free}
            </span>
          )}
          <PixelIcon name={companionIconNames[index]} size={56} />
          <p class="font-bold">{companion.name}</p>
          <p class="text-center text-offset text-xs">{companion.description}</p>
          <p class="rounded-full bg-default px-3 py-1 text-offset text-xs">
            {companion.sound}
          </p>
        </div>
      ))
    }
  </div>
</ContentSection>
