---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { Lang } from "~/i18n/translations";
import { translations } from "~/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang];
---

<ContentSection title={t.download.title} id="download">
  <Fragment slot="lead">
    <span set:html={t.download.lead} />
  </Fragment>
  <div class="flex flex-col items-center gap-8">
    <a
      href="#"
      class="group inline-flex items-center gap-4 rounded-2xl border-2 border-default bg-offset px-8 py-4 transition-all hover:border-primary/50 hover:shadow-lg hover:shadow-orange-500/10"
    >
      <Icon name="mdi:apple" class="size-10" />
      <div class="text-left">
        <p class="text-offset text-xs">{t.download.downloadOn}</p>
        <p class="font-bold text-xl">{t.download.appStore}</p>
      </div>
    </a>
    <div class="max-w-md space-y-4 text-center">
      <p class="text-offset text-sm">
        {t.download.freeText}
      </p>
      <div class="flex justify-center gap-6 text-offset text-xs">
        <span>{t.download.monthly}</span>
        <span>&middot;</span>
        <span>{t.download.annual}</span>
        <span>&middot;</span>
        <span>{t.download.lifetime}</span>
      </div>
    </div>
  </div>
</ContentSection>
