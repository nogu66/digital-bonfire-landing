---
import ContentSection from "~/components/content-section.astro";
import PixelIcon from "~/components/pixel-icon.astro";
import { woodFireVariants } from "~/data/pixel-art";
import type { Lang } from "~/i18n/translations";
import { translations } from "~/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = translations[lang];
---

<ContentSection title={t.woodTypes.title} id="wood-types">
  <Fragment slot="lead">
    <span set:html={t.woodTypes.lead} />
  </Fragment>
  <div class="grid max-w-5xl grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-6">
    {
      t.woodTypes.items.map((wood, index) => (
        <div class="group relative flex flex-col items-center gap-3 rounded-2xl border border-default bg-offset p-5 transition-transform hover:scale-105">
          {wood.free && (
            <span class="absolute -right-2 -top-2 rounded-full bg-green-500 px-2 py-0.5 text-white text-xs font-bold">
              {t.woodTypes.free}
            </span>
          )}
          <PixelIcon name={woodFireVariants[index]} size={48} />
          <p class="text-center font-bold text-sm">{wood.name}</p>
          <p class="text-center text-offset text-xs">{wood.description}</p>
        </div>
      ))
    }
  </div>
</ContentSection>
