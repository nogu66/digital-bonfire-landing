---
import type { Lang } from "~/i18n/translations";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const otherLang = lang === "en" ? "ja" : "en";
const otherLabel = lang === "en" ? "JP" : "EN";
const otherHref = lang === "en" ? "/ja/" : "/";
---

<a
  href={otherHref}
  class="rounded border border-current px-2 py-0.5 text-xs font-bold tracking-wide transition-colors hover:bg-white/10"
>
  {otherLabel}
</a>
